<html>
<head>
    <title>Trainers</title>
</head>
<body>
    <h1>Trainers</h1>
    <table>
        <thead>
        <tr>
            {% for key in Trainers[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
        </tr>
        <tbody>
        {% for trainer in Trainers %}
        <tr>
            {% for key in Trainers[0].keys() %}
            <td>{{trainer[key]}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>
    <form method="POST" action="/trainers">
        <fieldset>
            <legend>Add a new Trainer:</legend>
            <label for="trainer_name">Name</label>
            <input type="text" name="trainer_name" id="trainer_name" size="5" maxlength="100" required>
            <label for="trainer_region">Region</label>
            <input type="text" name="trainer_region" id="trainer_region" size="5" maxlength="100" required>
            <label for="trainer_type">Type</label>
            <input type="text" name="trainer_type" id="trainer_type" size="5" maxlength="100" required>
            <label for="trainer_pokemon_1">Number of Pokemon</label>
            <input type="number" name="num_pokemon" id="num_pokemon" size="5" maxlength="100" required>
            <input type="submit" value="submit">
        </fieldset>
    </form>
    <p><a href={{url_for('root')}}>Home</a></p>
</body>
</html>