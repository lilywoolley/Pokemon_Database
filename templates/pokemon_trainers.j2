<html>
<head>
    <title>Pokemon_Trainers</title>
</head>
<body>
    <h1>Pokemon_Trainers</h1>
    <table>
        <thead>
        <tr>
            {% for key in Pokemon_Trainers[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
        </tr>
        <tbody>
        {% for pokemon_trainer in Pokemon_Trainers %}
        <tr>
            {% for key in Pokemon_Trainers[0].keys() %}
            <td>{{pokemon_trainer[key]}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>
    <form method="POST" action="/pokemon_trainers">
        <fieldset>
            <legend>Add a new Pokemon to a trainer:</legend>
            <label for="pokemon_ID">Pokemon_ID</label>
            <input type="text" name="pokemon_ID" id="pokemon_ID" size="5" maxlength="100" required>
            <label for="trainer_ID">Trainer_ID</label>
            <input type="text" name="trainer_ID" id="trainer_ID" size="5" maxlength="100" required>
            <input type="submit" value="submit">
        </fieldset>
        <fieldset>
            <legend>Search for a Trainer:</legend>
            <label for="search">Enter a trainer ID:</label>
            <input type="number" name="search" id="search" size="5" maxlength="100">
            <input type="submit" value="search">
        </fieldset>   
    </form>
    <p><a href={{url_for('root')}}>Home</a></p>
</body>
</html>
